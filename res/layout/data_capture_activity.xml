<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/data_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textAppearance="@style/CodeTextAppearance"
        android:text="@string/no_data"
        android:minLines="3"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <Button
                android:layout_width="188dp"
                android:layout_height="77dp"
                android:text="@string/button_start"
                android:id="@+id/button" android:layout_gravity="center_horizontal|bottom" android:onClick="toggleCapture"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="322dp"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/captureLog" android:layout_weight="0.13" android:layout_gravity="center_horizontal|top"/>
    </FrameLayout>
</LinearLayout>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity$PlaceholderFragment">

    <TextView
        android:text="@string/main_welcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" android:layout_gravity="center_horizontal|top"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_connect_sensor"
            android:id="@+id/button" android:layout_gravity="left|center_vertical"

            android:clickable="true" android:enabled="true" android:onClick="initiateDeviceConnect"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/action_capture_data"
            android:id="@+id/button2" android:layout_gravity="right|center_vertical"/>


</FrameLayout>
